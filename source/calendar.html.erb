---
pageable: false
per_page: 20
layout: article
---
<h2>Posts from
  <% case page_type
     when 'day' %>
    <%= Date.new(year, month, day).strftime('%b %e %Y') %>.
  <% when 'month' %>
    <%= Date.new(year, month, 1).strftime('%b %Y') %>.
  <% when 'year' %>
    <%= year %>.
  <% end %>
</h2>

<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<ul class="post_list">
  <% page_articles.each_with_index do |article, i| %>
    <li><%= link_to article.title, article %> <span><%= format_date(article.date, :short) %></span></li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
